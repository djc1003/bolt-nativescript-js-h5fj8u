<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Login" icon="" />
    <StackLayout class="p-4">
        <TextField hint="Username" text="{{ username }}" class="input mb-4" />
        <TextField hint="Password" text="{{ password }}" secure="true" class="input mb-4" />
        <Button text="Login" tap="{{ onLogin }}" class="-primary" isEnabled="{{ !isLoading }}" />
        <ActivityIndicator busy="{{ isLoading }}" />
    </StackLayout>
</Page>